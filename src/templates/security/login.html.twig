{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card border-0 shadow rounded-3 my-5">
					<div class="card-body p-4 p-sm-5">
						<h5 class="card-title text-center mb-5 fw-light fs-5">Connectez-vous !</h5>
            	{% if app.user %}
		            <div class="mb-3">
			            Tu es connecté en tant que
			            {{ app.user.userIdentifier }},
			            <a href="{{ path('app_logout') }}">Se déconnecter</a>
		                </div>
	            {% endif %}
              {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
              <form method="post">
                <div class="form-floating mb-3">
                	<input type="email" value="{{ last_username }}" name="_username" class="form-control" autocomplete="email" required autofocus>
                  <label for="username">Adresse email</label>
                </div>
                <div class="form-floating mb-3">
                	<input type="password" name="_password" class="form-control" autocomplete="current-password" required>
                  <label for="password">Mot de passe</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
           

                <div class="d-grid">
                  <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                  Se connecter</button>
				  <a href="" style="text-decoration:none; text-align: center; margin-top: 10px">Mot de passe oublié ?</a>
							</div>
							<hr class="my-4">
							
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
  